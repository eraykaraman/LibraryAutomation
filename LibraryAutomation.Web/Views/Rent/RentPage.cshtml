@{
    ViewData["Title"] = "Create Rent";
}

@model Rent

<h1>Rent</h1>
<form method="post" asp-action="Rent" asp-controller="Rent">
    <label asp-for="BookId">@Model.BookId</label>
    <div class="form-group">
        <label asp-for="RenterName">Renter FullName</label>
        <input asp-for="RenterName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate">Rent Date</label>
        <input asp-for="CreatedDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>
    <div class="form-group">

        <input asp-for="BookId" name="BookId" class="form-control" type="hidden" />

    </div>

    <div class="form-group">
        <input type="submit" value="Rent" class="btn btn-primary" />
    </div>


</form>
